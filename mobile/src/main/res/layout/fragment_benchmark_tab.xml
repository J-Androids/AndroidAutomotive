<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/benchmark_result_tab_layout_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/application_background_color"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.BenchmarkTabFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/build_info_marginTop"
        android:textSize="@dimen/build_info_text_Size"
        android:textColor="@color/application_text_color"
        android:textStyle="bold"
        android:text="@string/build_info"
        />

    <TextView
        android:id="@+id/build_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:textColor="@color/application_text_color"
        android:textSize="@dimen/benchmark_tab_textview_textSize"
        android:layout_marginTop="@dimen/benchmark_tab_textview_marginTop"
        android:layout_marginBottom="@dimen/benchmark_tab_textview_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/benchmark_tab_view_height"
        android:backgroundTint="@color/white"
        android:layout_marginStart="@dimen/benchmark_tab_view_margin"
        android:layout_marginEnd="@dimen/benchmark_tab_view_margin"
        android:background="?android:attr/dividerVertical" />

    <TextView
        android:id="@+id/manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manufacturer"
        android:textColor="@color/application_text_color"
        android:textSize="@dimen/benchmark_tab_textview_textSize"
        android:layout_marginTop="@dimen/benchmark_tab_textview_margin"
        android:layout_marginBottom="@dimen/benchmark_tab_textview_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/benchmark_tab_view_height"
        android:backgroundTint="@color/white"
        android:layout_marginStart="@dimen/benchmark_tab_view_margin"
        android:layout_marginEnd="@dimen/benchmark_tab_view_margin"
        android:background="?android:attr/dividerVertical" />

    <TextView
        android:id="@+id/sdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sdk"
        android:textColor="@color/application_text_color"
        android:textSize="@dimen/benchmark_tab_textview_textSize"
        android:layout_marginTop="@dimen/benchmark_tab_textview_margin"
        android:layout_marginBottom="@dimen/benchmark_tab_textview_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/benchmark_tab_view_height"
        android:backgroundTint="@color/white"
        android:layout_marginStart="@dimen/benchmark_tab_view_margin"
        android:layout_marginEnd="@dimen/benchmark_tab_view_margin"
        android:background="?android:attr/dividerVertical" />

    <TextView
        android:id="@+id/board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/board"
        android:textColor="@color/application_text_color"
        android:textSize="@dimen/benchmark_tab_textview_textSize"
        android:layout_marginTop="@dimen/benchmark_tab_textview_margin"
        android:layout_marginBottom="@dimen/benchmark_tab_textview_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/benchmark_tab_view_height"
        android:backgroundTint="@color/white"
        android:layout_marginStart="@dimen/benchmark_tab_view_margin"
        android:layout_marginEnd="@dimen/benchmark_tab_view_margin"
        android:background="?android:attr/dividerVertical" />

    <TextView
        android:id="@+id/hardware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hardware"
        android:textColor="@color/application_text_color"
        android:textSize="@dimen/benchmark_tab_textview_textSize"
        android:layout_marginTop="@dimen/benchmark_tab_textview_margin"
        android:layout_marginBottom="@dimen/benchmark_tab_textview_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/benchmark_tab_view_height"
        android:backgroundTint="@color/white"
        android:layout_marginStart="@dimen/benchmark_tab_view_margin"
        android:layout_marginEnd="@dimen/benchmark_tab_view_margin"
        android:background="?android:attr/dividerVertical" />

    <Button
        android:id="@+id/benchmark_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/benchmark_tab_button_marginTop"
        android:layout_marginStart="@dimen/benchmark_tab_button_margin"
        android:layout_marginEnd="@dimen/benchmark_tab_button_margin"
        android:padding="@dimen/benchmark_tab_button_padding"
        android:textSize="@dimen/benchmark_tab_button_textSize"
        android:text="@string/run_cpu_benchmark"
        />

</LinearLayout>